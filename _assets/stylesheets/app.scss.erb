@import "_vendor/normalize";
@import "_vendor/foundation/settings";
@import "_vendor/foundation";
// @import "_vendor/custom_foundation";
@import "_vendor/foundation/social_foundicons";
@import "_vendor/bourbon/_bourbon.scss";
@import url(http://fonts.googleapis.com/css?family=Lato:300,700);
// @import url(http://fonts.googleapis.com/css?family=Maven+Pro:500);

$break-medium: 64rem;
$break-small: 40rem;
$topbar-link-bg-hover: rgba(6,114,175,0.7);
// $nav-color: rgba(100,100,100,0);

body {
  .page-container {
    display: inline;
    height: 100%;
    .off-canvas-wrap {
      height: 100%;
      overflow: inherit;
      .inner-wrap {
        height: 100%
      }
    }
    .move-right {
      overflow: hidden;
    }
  }
}

.show-onload {
  display: none;
}

.spacer {
  height: 2rem;
  @media screen and (max-width: $break-small) {
    height: 1rem;
  }
}

.bigger-spacer {
  height: 2rem;
}

.row {
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  color: white;
  .section-title {
    height: 3rem;
    margin-bottom: 1rem;
    @media screen and (max-width: $break-small) {
      height: 0;
      margin-bottom: .5rem;
    }
  }
  .section-header {
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  font-size: 3rem;
  @media screen and (max-width: $break-small) {
    font-size: 1.5rem;
  }
    &.left {
      color: #FEFEFE;
    }
    &.right {
      color: #121212;
    }
  }
  &.content {
    margin-top: 5rem;
    @media screen and (max-width: $break-small) {
      margin-top: 1rem;
    }
  }
  p {
    font-size: 1.75rem;
    @media screen and (max-width: $break-medium) {
      font-size: 1.25rem;
    }
    @media screen and (max-width: $break-small) {
      font-size: 1.1rem;
    }
  }
  figure {
    margin-top: 0;
    width: 90%;
    text-align: center;
    img {
      border-radius: 1rem;
      width: 100%;
      @media screen and (max-width: $break-small) {
        margin-top: 2rem;
        width: 65%;
      }
    }
  }
  figcaption {
      text-align: center;
  }
}

.hero-photo {
  top: 0;
  width: 100%;
  min-height: 100%;
  background: #6cab26;
  // background: url(http://oi61.tinypic.com/2h4xovn.jpg) no-repeat center center fixed;
  // -webkit-background-size: cover;
  //    -moz-background-size: cover;
  //      -o-background-size: cover;
  //         background-size: cover;
  .title-text {
    color: #FEFEFE;
    font-family: 'Lato', Helvetica, sans-serif;
    font-weight: 100;
    font-size: 3.5em;
    text-shadow: 0 1px rgba(123, 122, 122, 0.6);
    width: 100%;
    margin: 0;
    padding-top: .7rem;
    text-align: center;
    &.dark {
      color: #121212;
    }
    .emphasis {
      color: #0672AF;
    }
    strong {
      font-weight: 700;
    }
    @media screen and (max-width: $break-small) {
      font-size: 3em;
      margin-top: .5em;
    }
  }
  .social-icons {
    width: 100%;
    text-align: center;
    a {
      font-size: 3.5em;
      color: rgba(#0672AF, 0.7);
      @include transition(all 0.5s ease);
      &:hover {
        color: rgba(white, 0.7);
      }
    }
  }
}

.sticking-nav {
  right: 0;
  left: 0;
  top: 0;
  position: fixed;
  margin-top: 0 !important;
}

.nav-bar {
  background-color: rgba(100,100,100,0.4);
  .top-bar-section ul li {
    background: transparent;
  }
  margin-top: -45px;
  z-index: 100;
  font-family: 'Maven Pro', Helvetica, sans-serif;
  a {
    font-family: helvetica;
  }
}

section {
  &.about {
    margin: 0;
    width: 100%;
    min-height: 67%;
    @include background-image(url(<%= asset_path "purty_wood.png" %>));
  }
  &.projects {
    margin: 0;
    width: 100%;
    min-height: 67%;
    @include background-image(url(<%= asset_path "tiny_grid.png" %>));
  }
}

.orbit-container {
  margin-top: 1em;
}