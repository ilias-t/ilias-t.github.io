@import "_vendor/normalize";
@import "_vendor/foundation/settings";
@import "_vendor/foundation";
// @import "_vendor/custom_foundation";
@import "_vendor/foundation/social_foundicons";
@import "_vendor/bourbon/_bourbon.scss";

$break-large: 90rem;
$break-medium: 64rem;
$break-small: 40rem;
$white: #FEFEFE;
$section-bg-blue: #6f91a3;
$section-bg-red: #B56942;

body {
  .page-container {
    display: inline;
    height: 100%;
    .off-canvas-wrap {
      height: 100%;
      overflow: inherit;
      .inner-wrap {
        height: 100%
      }
    }
    .move-right {
      overflow: hidden;
    }
  }
}

.show-onload {
  display: none;
}

.spacer {
  height: 1rem;
}

.bigger-spacer {
  height: 2rem;
  @media screen and (max-width: $break-small) {
    height: 1rem;
  }
}

.hero-photo {
  top: 0;
  width: 100%;
  min-height: 100%;
  // Gradient
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#8b9da9), to(#fff6e4));
  background-image: -webkit-linear-gradient(#8b9da9, #fff6e4);
  background-image: -moz-linear-gradient(#8b9da9, #fff6e4);
  background-image: -o-linear-gradient(#8b9da9, #fff6e4);
  background-image: linear-gradient(#8b9da9, #fff6e4);
  box-shadow: inset 0 0 100px hsla(0,0%,0%,.3);
  .title-text {
    color: $white;
    font-family: 'Helvetica Neue', Helvetica, sans-serif;
    font-weight: 100;
    font-size: 3.5em;
    text-shadow: 0 1px rgba(123, 122, 122, 0.6);
    width: 100%;
    margin: 0;
    padding-top: .7rem;
    text-align: center;
    &.title-description {
      font-size: 2em;
      margin-top: 0;
    }
    .emphasis {
      color: #0672AF;
    }
    strong {
      font-weight: 700;
    }
    @media screen and (max-width: $break-small) {
      font-size: 3em;
      margin-top: 1em;
    }
  }
  .social-icons {
    width: 100%;
    text-align: center;
    a {
      font-size: 3.5em;
      color: rgba(#0672AF, 0.7);
      @include transition(all 0.5s ease);
      &:hover {
        color: rgba(#EFEFEF, 0.7);
      }
    }
  }
}

.sticking-nav {
  right: 0;
  left: 0;
  top: 0;
  position: fixed;
  margin-top: 0 !important;
}

.nav-bar {
  background-color: rgba(100,100,100,0.4);
  .top-bar-section ul li {
    background: transparent;
  }
  margin-top: -45px;
  z-index: 100;
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  a {
    font-family: helvetica;
  }
  @media screen and (max-width: $break-small) {
    display: none;
  }
}

.sidenav {
  .left-off-canvas-menu {
    min-height: 100%;
  }
  .left-small {
    top: -5px;
    border-right: none;
  }
  h1 {
    margin-right: 2.6em;
  }
}

.row {
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  color: white;
  .section-title {
    height: 3rem;
    margin-bottom: 1rem;
    @media screen and (max-width: $break-small) {
      height: 0;
      margin-bottom: .5rem;
    }
  }
  .section-header {
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  font-size: 3rem;
  @media screen and (max-width: $break-small) {
    font-size: 1.5rem;
  }
    &.left {
      color: $white;
    }
    &.right {
      color: $white;
    }
  }
  &.content {
    margin-top: 2.5rem;
  }
  p {
    font-size: 1.75rem;
    @media screen and (max-width: $break-medium) {
      font-size: 1.25rem;
    }
    @media screen and (max-width: $break-small) {
      font-size: 1.1rem;
    }
  }
  figure {
    margin-top: 0;
    width: 90%;
    text-align: center;
    @media screen and (max-width: $break-small) {
      width: 100%;
      margin-left: 0;
    }
    img {
      border-radius: 1rem;
      width: 100%;
      @media screen and (max-width: $break-small) {
        margin-top: 2rem;
        width: 65%;
      }
    }
  }
  figcaption {
      text-align: center;
  }
}

section {
  &.about {
    margin: 0;
    width: 100%;
    background-color: $section-bg-blue;
  }
  &.projects {
    margin: 0;
    width: 100%;
    background-color: $section-bg-red;
  }
  &.technologies {
    background-color: $section-bg-blue;
  }
  .content {
    p {
      margin-bottom: 2rem;
      @media screen and (max-width: $break-small) {
        font-size: .9rem;
      }
    }
  }
  .nav-link {
    margin-top: 3rem;
  }
}

.technology {
  padding-left: 2rem;

  @media screen and (max-width: $break-small) {
    padding-left: 0.9375rem;
  }
  .table {
    background: none;
    border: none;
    tr {
      &:nth-child(even){
        background: none;
      }
      td {
          padding: .5rem 0;
          h4 {
            font-size: 1rem;
          }
      }
      .skill-label {
        margin-right: 1.2rem;
        color: #A3D5EF;
      }
      .skill-graph {
        display: inline-block;
        height: 1.2rem;
        width: 1.2rem;
        border-radius: 10rem;
        vertical-align: middle;
        margin-right: .4rem;
        &.blue {
          background-color: #008cba;
        }
        &.grey {
          background-color: #A0A0A0;
        }
      }
    }
  }
}


.orbit-container {
  margin-top: 1rem;
}